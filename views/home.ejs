<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col items-center p-6">

    <!-- Profile Section -->
    <header class="w-full max-w-3xl bg-gray-800 p-4 rounded-lg flex items-center justify-between shadow-lg mb-6">
        <div class="flex items-center gap-4">
            <img src="<%= user.profileImage %>" alt="Profile" class="w-12 h-12 object-cover object-top rounded-full">
            <div>
                <h2 class="text-xl font-bold"><%= user.username %></h2>
                <p class="text-sm text-gray-400"><%= user.email %></p>
            </div>
        </div>
        <a href="/users/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg font-bold transition">
            Logout
        </a>
    </header>

    <!-- Create Post Form -->
    <div class="w-full max-w-3xl bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
        <h1 class="text-2xl font-bold mb-4">Create a Post</h1>
        <form action="/posts/create" method="post" class="space-y-4">
            <div class="space-y-2">
                <label for="title" class="block text-sm font-medium">Post Title</label>
                <input type="text" id="title" name="title" placeholder="Enter post title" required
                    class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="space-y-2">
                <label for="content" class="block text-sm font-medium">Post Content</label>
                <textarea id="content" name="content" placeholder="Write your post here..." rows="4" required
                    class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white focus:outline-none focus:ring-1 focus:ring-blue-500"></textarea>
            </div>

            <button type="submit" class="w-full py-2 bg-blue-600 hover:bg-blue-700 rounded-lg font-bold transition">
                Create Post
            </button>
        </form>
    </div>

    <!-- Post List -->
    <div class="w-full max-w-3xl mx-auto space-y-4 mt-10 px-6">
        <h1 class="text-3xl text-center font-bold">Our Posts (<%= allPosts.length %>)</h1>

        <% allPosts.reverse().forEach((post) => { %>
        <div class="w-full bg-gray-800 p-6 rounded-lg shadow-lg">
            <div class="flex items-center gap-4 mb-4">
                <img src="<%= post.author.profileImage %>" alt="Profile" class="w-12 h-12 object-cover object-top rounded-full" />
                <div>
                    <h2 class="text-xl font-bold"><%= post.author.username %></h2>
                    <p class="text-sm text-gray-400"><%= post.author.email %></p>
                </div>
            </div>
            <h3 class="text-2xl font-semibold mb-2"><%= post.title %></h3>
            <p class="text-gray-300"><%= post.content %></p>
        </div>
        <% }) %>
    </div>

</body>
</html>
